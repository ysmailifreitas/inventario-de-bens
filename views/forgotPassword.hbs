<body class="bg-gray-100 h-screen flex items-center justify-center">
  <div class="max-w-sm mx-auto p-8 rounded-lg card">
      <h2 class="text-2xl font-semibold mb-4 text-center">RECUPERAR SENHA</h2>
      <form action="/forgot-password" method="POST" class="forgotPasswordForm">
          <div class="mb-4">
              <label for="username" class="block text-sm font-medium text-gray-700">Email:</label>
              <input type="email" id="company_email" name="company_email" class="mt-1 block w-full px-3 py-2 rounded-lg focus:outline-none text-gray-400">
          </div>
          <button type="submit" class="button-30 flex items-center justify-center mx-auto">Recuperar</button>
          <div class="link flex flex-col items-center mt-4">
              <a href="/login" class="link__login">Voltar para o login</a>
          </div>
</div>

      </form>
  </div>
