<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventário - Cadastrar Bem</title>
    <base href="/">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/listagem.css">
    <script src="js/cadastro.js"></script>
    <script src="js/fornecedores.js"></script>
</head>

<body>

    {{> nav}}

    <div class="container">
        <h1></h1>
        <div class="card">
            <div  class="voltar">
                <a href="/home" class="voltar">↩ Voltar</a>
            </div>

            <div class="listagem">
              <h2 style="color:black">LISTAGEM DE FORNECEDORES</h2>
              <a href="/cadastrarFornecedor">
                <button class="button" type="submit">Criar Novo Fornecedor</button>
              </a>

              <a href="/relatorioFornecedores/"><button>Gerar Relatório</button></a>

              <div class="table-wrapper">
                  <table class="fl-table">
                      <thead>
                      <tr>
                          <th>NOME</th>
                          <th>TELEFONE</th>
                          <th>EMAIL</th>
                          <th>AÇÕES</th>
                      </tr>
                      </thead>
                      <tbody>
                        {{#each fornecedores}}
                      <tr>
                          <td>{{for_nome}}</td>
                          <td>{{for_telefone}}</td>
                          <td>{{for_email}}</td>
                          <td>
                            <table class="icones">
                              <tr>
                                <td>
                                  <a href="/editarFornecedor/{{id}}">
                                    <img height="25px" width="25px" src="../img/edit.png"></img>
                                  </a>
                                </td>
                                <td>
                                    <a id="deletar" href="/fornecedor/deletarFornecedor/{{id}}" onclick="removerFornecedor()">
                                    <img height="25px" width="25px" src="../img/delete.png"></img>
                                  </a>
                                </td>
                              </tr>
                            </table>
                          </td>
                      </tr>
                        {{/each}}
                      <tbody>
                  </table>
              </div>
            </div>
        </div>
    </div>

</body>

<script src="js/cadastro.js"></script>

</html>
