<html lang="pt-center">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fornecedores</title>
    <base href="/">
    <link rel="stylesheet" href="css/listagem.css">
    <link rel="stylesheet" href="css/estilo.css">
    <link rel="shortcut icon" href="img/box.png" type="image/x-icon">
</head>
<body class="bg-gray-100">
{{> nav}}
<div class="mt-28 sm:mt-44 sm:ml-64 mx-auto w-fit">
    <div class="flex flex-col justify-center items-center">
    {{#ifNotEquals username.usr_cargo 'Comum'}}
        {{#ifNotEquals username.usr_cargo 'Supervisor'}}
        <div class="flex justify-end bg-gray-50 add_button">
            <button class="font-bold rounded"><a href="/cadastrarFornecedor">Adicionar Fornecedores</a></button>
        </div>
        {{/ifNotEquals}}
    {{/ifNotEquals}}

        <div class="w-5/6 shadow-xl">
            <h1 class="bg-gray-50 py-2 px-4 rounded-t-lg text-center uppercase">Listagem de Fornecedores</h1>
            <table class="w-full">
                <thead class="">
                <tr class="hidden sm:flex">
                    <th class="w-full py-3 bg-gray-50 text-center text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                        Nome
                    </th>
                    <th class="w-full py-3 bg-gray-50 text-center text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                        Telefone
                    </th>
                    <th class="w-full py-3 bg-gray-50 text-center text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                        Email
                    </th>
                    <th class="w-full py-3 bg-gray-50 text-center text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                        Ações
                    </th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                {{#each fornecedores}}
                    <tr class="flex flex-col w-full sm:flex-row text-center border-b-4 sm:border-none">
                        <td class="w-full px-6 py-4 whitespace-no-wrap sm:text-center"><span class="mb-2 justify-center text-green-500 flex sm:hidden">Nome:</span>{{for_nome}}</td>
                        <td class="w-full px-6 py-4 whitespace-no-wrap sm:text-center"><span class="mb-2 justify-center text-green-500 flex sm:hidden">Telefone:</span>{{for_telefone}}</td>
                        <td class="w-full px-6 py-4 whitespace-no-wrap sm:text-center"><span class="mb-2 justify-center text-green-500 flex sm:hidden">Email:</span>{{for_email}}</td>
                        <td class="w-full px-6 py-4 whitespace-no-wrap sm:text-center"><span class="mb-2 justify-center text-green-500 flex sm:hidden">Ações:</span>
                            <table class="w-fit mx-auto">
                                <tr class="">
                                    <td class="flex w-full">
                                        <a href="/editarFornecedor/{{for_id}}"
                                           class="pr-5">
                                            <img height="25px" width="25px" src="../img/edit.png">
                                        </a>
                                        <a id="deletar" href="/deletarFornecedor/{{for_id}}"
                                           onclick="removerFornecedor()"
                                           class="">
                                            <img height="25px" width="25px" src="../img/delete.png">
                                        </a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
</html>